<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roma3Assistant.NewEvent">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout
            VerticalOptions="Center"
            Margin="20">

                <Entry
                Placeholder="Nome"
                Keyboard="Chat"
                x:Name="NameInput"
                TextColor="Black" HorizontalOptions="FillAndExpand"
                />

                <Entry
                Placeholder="Descrizione"
                Keyboard="Chat"
                x:Name="DescriptionInput"
                TextColor="Black" HorizontalOptions="FillAndExpand"
                />

                <DatePicker MinimumDate="01/01/2021"
                MaximumDate="12/31/2021"
                Date="02/19/2021"
                x:Name="DatePicker" 
                DateSelected="DatePicker_DateSelected"/>

                <Button
                Text="Save"
                Clicked="Button_Clicked"
                TextColor="#024DA8" BackgroundColor="Transparent" WidthRequest="100" FontAttributes="Bold" BorderColor="#024DA8" BorderWidth="1" BorderRadius="10" 
                Margin="20, 60"
                />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>