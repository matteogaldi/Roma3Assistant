<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Roma3Assistant.View.LoginPage">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center"
            Margin="20">

            <Label
                Text="Roma3 Assistant"
                TextColor="#024DA8" FontSize="25" HorizontalOptions="CenterAndExpand" 
                HorizontalTextAlignment="Center"
                />

            <Entry
                Placeholder="Email"
                Keyboard="Email"
                x:Name="UserNameInput"
                TextColor="Black" HorizontalOptions="FillAndExpand"
                />

            <Entry
                Placeholder="Password"
                IsPassword="True"
                x:Name="PasswordInput"
                TextColor="Black" HorizontalOptions="FillAndExpand"
                />

            <Button
                Text="Login"
                Clicked="LoginButton_Clicked"
                TextColor="#024DA8" BackgroundColor="Transparent" WidthRequest="100" FontAttributes="Bold" BorderColor="#024DA8" BorderWidth="1" BorderRadius="10" 
                Margin="20, 60"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
